<div class="row">
  <div class="col-md-12">
    <h1>記事の編集</h1>
    <%= form_for @post do |f| %>
      <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :category %> <br>
        <%= f.text_field :category %>
      </p>
      <p>
        <%= f.label :body %> <br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit '更新する' %>
      </p>
    <% end %>
  </div>
</div>
